@page
@model Folha_Pagamento_Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control input-field" id="Email" name="Email" asp-for="Email" required>
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" class="form-control input-field" id="Senha" name="Senha" asp-for="Senha" required>
    </div>
    <button type="submit" class="btn btn-login">Entrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Token))
{
    <div class="alert alert-success" role="alert">
        <h4>Token de Autenticação:</h4>
        <pre>@Model.Token</pre>
    </div>
}
