@page
@model Folha_Pagamento_Web.Models.ColaboradorModel

<!DOCTYPE html>
<html>
<head>
    <title>Colaboradores</title>
</head>
<body>
    <h1>Colaboradores</h1>

    <p>
        <a asp-page="/Create">Cadastrar Colaborador</a>
    </p>

    @if (Model.Colaboradores != null && Model.Colaboradores.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Salario Base
                    </th>
                    <th>
                        Data de Nascimento
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var colaborador in Model.Colaboradores)
                {
                    <tr>
                        <td>@colaborador.Nome colaborador.Sobrenome</td>
                        <td>@colaborador.SalarioBase</td>
                        <td>@colaborador.DataNascimento</td>
                        <td>
                            <a asp-page="/Edit" asp-route-id="@colaborador.Id">Edit</a> |
                            <a asp-page="/Details" asp-route-id="@colaborador.Id">Details</a> |
                            <a asp-page="/Delete" asp-route-id="@colaborador.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

 
</body>
</html>
