@page
@model Folha_Pagamento_Web.Models.UsuarioModel

<!DOCTYPE html>
<html>
<head>
    <title>Usuarios</title>
</head>
<body>
    <h1>Usuarios</h1>

    <p>
        <a asp-page="/Create">Cadastrar Usuário</a>
    </p>

    @if (Model.Usuarios != null && Model.Usuarios.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        PermissaoId
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.PermissaoId</td>
                        <td>
                            <a asp-page="/Edit" asp-route-id="@usuario.Id">Edit</a> |
                            <a asp-page="/Details" asp-route-id="@usuario.Id">Details</a> |
                            <a asp-page="/Delete" asp-route-id="@usuario.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>
